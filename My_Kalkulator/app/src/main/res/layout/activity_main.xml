<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="35dp"
        android:backgroundTint="@color/black"
        app:strokeColor="@color/black"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toTopOf="@id/buttonRow1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/resultTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="175dp"
            android:background="@color/black"
            android:elevation="4dp"
            android:gravity="end"
            android:padding="16dp"
            android:text=""
            android:textColor="@color/white"
            android:textSize="36sp"
            app:layout_constraintBottom_toTopOf="@id/buttonRow1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </com.google.android.material.card.MaterialCardView>


    <LinearLayout
        android:id="@+id/buttonRow1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardview">

        <Button
            android:id="@+id/bt_C"
            android:layout_weight="1"
            android:layout_width="@dimen/_buttonSizeMain"
            android:layout_height="@dimen/_buttonSizeMain"
            android:layout_centerHorizontal="true"
            android:text="C"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textSize="@dimen/_txtBtSz"
            android:background="@drawable/rounded_bt_gray"/>

        <Button
            android:id="@+id/bt_plusmin"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="@dimen/_buttonSizeMain"
            android:layout_height="@dimen/_buttonSizeMain"
            android:layout_centerHorizontal="true"
            android:text="+/-"
            android:textSize="@dimen/_txtBtSz"
            android:background="@drawable/rounded_bt_gray"/>

        <Button
            android:id="@+id/bt_percent"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="@dimen/_buttonSizeMain"
            android:layout_height="@dimen/_buttonSizeMain"
            android:layout_centerHorizontal="true"
            android:text="%"
            android:textSize="@dimen/_txtBtSz"
            android:background="@drawable/rounded_bt_gray" />

        <Button
            android:id="@+id/bt_divide"
            android:layout_weight="1"
            android:layout_width="@dimen/_buttonSizeMain"
            android:layout_height="@dimen/_buttonSizeMain"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textSize="@dimen/_txtBtSz"
            android:background="@drawable/rounded_bt_orange"
            android:text="รท" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonRow2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonRow1">

        <Button
            android:id="@+id/bt_7"
            android:layout_weight="1"
            android:layout_width="@dimen/_buttonSizeMain"
            android:layout_height="@dimen/_buttonSizeMain"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textColor="@color/white"
            android:textSize="@dimen/_txtBtSz"
            android:background="@drawable/rounded_bt_dark_gray"
            android:text="7"
            android:layout_marginBottom="15dp" />

        <Button
            android:id="@+id/bt_8"
            android:layout_weight="1"
            android:layout_width="@dimen/_buttonSizeMain"
            android:layout_height="@dimen/_buttonSizeMain"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textColor="@color/white"
            android:textSize="@dimen/_txtBtSz"
            android:background="@drawable/rounded_bt_dark_gray"
            android:text="8" />

        <Button
            android:id="@+id/bt_9"
            android:layout_weight="1"
            android:layout_width="@dimen/_buttonSizeMain"
            android:layout_height="@dimen/_buttonSizeMain"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textColor="@color/white"
            android:textSize="@dimen/_txtBtSz"
            android:background="@drawable/rounded_bt_dark_gray"
            android:text="9" />

        <Button
            android:id="@+id/bt_mult"
            android:layout_weight="1"
            android:layout_width="@dimen/_buttonSizeMain"
            android:layout_height="@dimen/_buttonSizeMain"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textSize="@dimen/_txtBtSz"
            android:background="@drawable/rounded_bt_orange"
            android:text="ร" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonRow3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonRow2">

        <Button
            android:id="@+id/bt_4"
            android:layout_weight="1"
            android:layout_width="@dimen/_buttonSizeMain"
            android:layout_height="@dimen/_buttonSizeMain"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textColor="@color/white"
            android:textSize="@dimen/_txtBtSz"
            android:background="@drawable/rounded_bt_dark_gray"
            android:text="4"
            android:layout_marginBottom="15dp" />

        <Button
            android:id="@+id/bt_5"
            android:layout_weight="1"
            android:layout_width="@dimen/_buttonSizeMain"
            android:layout_height="@dimen/_buttonSizeMain"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textColor="@color/white"
            android:textSize="@dimen/_txtBtSz"
            android:background="@drawable/rounded_bt_dark_gray"
            android:text="5" />

        <Button
            android:id="@+id/bt_6"
            android:layout_weight="1"
            android:layout_width="@dimen/_buttonSizeMain"
            android:layout_height="@dimen/_buttonSizeMain"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textColor="@color/white"
            android:textSize="@dimen/_txtBtSz"
            android:background="@drawable/rounded_bt_dark_gray"
            android:text="6" />

        <Button
            android:id="@+id/bt_min"
            android:layout_weight="1"
            android:layout_width="@dimen/_buttonSizeMain"
            android:layout_height="@dimen/_buttonSizeMain"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textSize="@dimen/_txtBtSz"
            android:background="@drawable/rounded_bt_orange"
            android:text="-" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonRow4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonRow3">

        <Button
            android:id="@+id/bt_1"
            android:layout_weight="1"
            android:layout_width="@dimen/_buttonSizeMain"
            android:layout_height="@dimen/_buttonSizeMain"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textColor="@color/white"
            android:textSize="@dimen/_txtBtSz"
            android:background="@drawable/rounded_bt_dark_gray"
            android:text="1"
            android:layout_marginBottom="15dp" />

        <Button
            android:id="@+id/bt_2"
            android:layout_weight="1"
            android:layout_width="@dimen/_buttonSizeMain"
            android:layout_height="@dimen/_buttonSizeMain"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textColor="@color/white"
            android:textSize="@dimen/_txtBtSz"
            android:background="@drawable/rounded_bt_dark_gray"
            android:text="2" />

        <Button
            android:id="@+id/bt_3"
            android:layout_weight="1"
            android:layout_width="@dimen/_buttonSizeMain"
            android:layout_height="@dimen/_buttonSizeMain"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textColor="@color/white"
            android:textSize="@dimen/_txtBtSz"
            android:background="@drawable/rounded_bt_dark_gray"
            android:text="3" />

        <Button
            android:id="@+id/bt_plus"
            android:layout_weight="1"
            android:layout_width="@dimen/_buttonSizeMain"
            android:layout_height="@dimen/_buttonSizeMain"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textSize="@dimen/_txtBtSz"
            android:background="@drawable/rounded_bt_orange"
            android:text="+" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonRow5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonRow4">

        <Button
            android:id="@+id/bt_0"
            android:layout_weight="6"
            android:layout_width="@dimen/_buttonSizeMain"
            android:layout_height="@dimen/_buttonSizeMain"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:textColor="@color/white"
            android:textSize="@dimen/_txtBtSz"
            android:background="@drawable/rounded_bt_dark_gray"
            android:text="0" />

        <Button
            android:id="@+id/bt_koma"
            android:layout_weight="1"
            android:layout_width="@dimen/_buttonSizeMain"
            android:layout_height="@dimen/_buttonSizeMain"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textColor="@color/white"
            android:textSize="@dimen/_txtBtSz"
            android:background="@drawable/rounded_bt_dark_gray"
            android:text="," />

        <Button
            android:id="@+id/bt_equals"
            android:layout_weight="1"
            android:layout_width="@dimen/_buttonSizeMain"
            android:layout_height="@dimen/_buttonSizeMain"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="15dp"
            android:textColor="@color/black"
            android:textSize="@dimen/_txtBtSz"
            android:background="@drawable/rounded_bt_orange"
            android:text="=" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
